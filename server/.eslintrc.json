{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 13
  },
  "plugins": ["prettier"],
  "rules": {
    "strict": ["error", "global"],
    "quotes": ["error", "double", { "avoidEscape": true } ],
    "semi": [2, "always"],
    "no-async-promise-executor": "off",
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-plusplus": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off",
    "camelcase": "off",
    "import/extensions": "off",
    "no-underscore-dangle": "off",
    "import/no-named-as-default": "off"
  }
}
